    "version": "0.2.0",
    "configurations": [

        {
            "name": "(gdb) 启动",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/${fileBasenameNoExtension}.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/path/to/gdb",
            "setupCommands": [
                {
                    "description": "为 gdb 启用整齐打印",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "(Windows) 启动",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/Notes/Reading/Algorithm/IntroductionToAlgorithm/01s.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false
        },
        {
            "name": "Python: Terminal (integrated)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/Python/AutoScan.py",
            // "program": "${workspaceFolder}/Python/LanguageInteroperability/Introp_CSharp.py",
            // "program": "${workspaceFolder}/Python/Turtle/Draw_Axis.py",
            // "program": "${workspaceFolder}/Python/Crawlers/NovelCrawler.py",
            // "program": "${workspaceFolder}/Python/Practice/Day-01.py",
            // "program": "${workspaceFolder}/Python/Process/UITest.py",
            // "program": "${workspaceFolder}/Python/API/BaiduTranslate.py",
            // Python\RestFulAPI\BaiduTranslate.py
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Current File (Integrated Terminal)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        }
    ]
}